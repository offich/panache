{
  "extends": ["config:base", ":prHourlyLimitNone"],
  "timezone": "Asia/Tokyo",
  "labels": ["deps"],
  "rebaseWhen": "conflicted",
  "separateMinorPatch": true,
  "schedule": ["before 10am on Monday"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "packageRules": [
    {
      "updateTypes": ["patch"],
      "enabled": false
    }
  ],
  "ignoreDeps": ["flutter", "dart"],
  "ignorePaths": [
    ".github/workflows",
    ".fvmrc",
    "example/pubspec.yml",
    "example/.fvmrc"
  ]
}
